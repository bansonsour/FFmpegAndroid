<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.FFmpegConfigActivity">

    <Button
        android:id="@+id/btn_codecs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codecs"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_fmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formats"
        android:layout_below="@+id/btn_codecs"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtert"
        android:layout_below="@+id/btn_fmt"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progress_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>



</RelativeLayout>
